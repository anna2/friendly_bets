<div class="col-md-6 col-md-offset-3">
  <div class="well">

    <legend><h1>Enter a position on the bet</h1></legend>

<%= form_for(@position, url: bet_positions_path) do |f| %>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.text_field :position %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  </div>
</div>
