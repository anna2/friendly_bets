<% if current_user %>

<div class="col-md-6 col-md-offset-3">



  <legend><h1>Your Bets Dashboard:</h1></legend>

  <% if @pending_bets.size > 0  %>
    <div class="panel panel-danger">
      <div class="panel-heading"><h3>Pending Bets:</h3></div>
      <div class="panel-body">You have bets to join!</div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Amount</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @pending_bets.each do |bet| %>
            <tr>
              <td><%= bet.title %></td>
              <td><%= bet.description %></td>
              <td>$<%= bet.amount %></td>
              <td><%= link_to 'More...', bet %></td>
              <td><%= link_to 'Join', new_bet_position_path(bet)%></td>
              <td><%= link_to 'Reject', bet_position_path(bet, Position.where(user_id: current_user.id, bet_id: bet.id, admin: false).take.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>

    <% if @accepted_bets.size > 0  %>
      <div class="panel panel-info">
        <div class="panel-heading"> <h3>Current bets:</h3></div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Amount</th>
              <th>My Position</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @accepted_bets.each do |bet| %>
              <tr>
                <td><%= bet.title %></td>
                <td><%= bet.description %></td>
                <td>$<%= bet.amount %></td>
                <td><%= Position.find_by(bet_id: bet.id, user_id: current_user.id).position%></td>
                <td><%= link_to 'More...', bet %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>

    <% if @closed_bets.size > 0  %>
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Closed bets:</h3></div>

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Amount</th>
              <th>Did I win?</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @closed_bets.each do |bet| %>
              <tr>
                <td><%= bet.title %></td>
                <td><%= bet.description %></td>
                <td>$<%= bet.amount %></td>
                <td><%= bet.winner_id == current_user.id ? "Yes!" : "No" %></td>
                <td><%= link_to 'More...', bet %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% end %>
</div>
    <% else %>

      <h3>Are you logged in?</h3>

      <% end %>
