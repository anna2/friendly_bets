<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @bet.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bet.description %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @bet.amount %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @admin[0].email %>
</p>

<p>
  <strong>Participants:</strong><br>
  <% @betters.each do |better| %>
    <table>
      <tr>
        <td><%= better.email %></td>
        <td><%= Position.find_by(bet_id: params[:id], user_id: better.id).position%></td>
      </tr>
    </table>
  <% end  %>
</p>

